"use strict";

var iotdb = require('iotdb');
var _ = iotdb.helpers;
var cfg = iotdb.cfg;

var path = require('path');
var util = require('util');

var bunyan = require('bunyan');
var logger = bunyan.createLogger({
    name: 'transport',
    module: 'iotdb-transport',
});

var index = require('../index');

/* for minimist */
var boolean = [
];
var defaults = {};


var help = function() {
    console.log("usage: transport <uri>");
    console.log("");
};

var run_cli = function()  {
    var ad = require('minimist')(process.argv.slice(2), {
        boolean: boolean,
        default: defaults,
    });

    if (ad._.length !== 1) {
        help();
        process.exit(0);
    }

    index.connect(ad._[0], function(error, transporter) {
        if (error) {
            logger.error({
                method: "run_cli",
                error: _.error.message(error),
            }, "could not create a transporter");
            return;
        }
    });
};

run_cli();
